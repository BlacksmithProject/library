{
    "name": "blacksmith-project/event-manager",
    "description": "A PHP library providing event tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
          "name": "Nicolas Gomes de Oliveira",
          "email": "ngdo27@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.12",
        "infection/infection": "^0.25.3",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "BSP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BSP\\Tests\\": "tests/"
        }
    }
}
