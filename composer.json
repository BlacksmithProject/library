{
    "name": "blacksmith-project/event-manager",
    "description": "A PHP library providing event tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
          "name": "Nicolas Gomes de Oliveira",
          "email": "ngdo27@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "beberlei/assert": "^3.2"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.8",
        "infection/infection": "^0.13.1",
        "mnapoli/pretty": "^1.0",
        "phpstan/phpstan": "^0.11.8",
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "BSP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BSP\\Tests\\": "tests/"
        }
    }
}
